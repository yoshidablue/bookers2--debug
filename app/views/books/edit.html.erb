<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <%= render 'layouts/errors', obj: @book %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title,autofocus: true,id:"inputTitle",placeholder:"タイトル",class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_area :body,autofocus: true,class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.label :tag %>
          <%= f.text_field :category, class: 'form-control book_category' %>
        </div>
        <div>
          <span id="star-rate-<%= @book.id %>"></span>
          <script>
            $('#star-rate-<%= @book.id %>').raty({
              size: 36,
              starOff: '<%= asset_path('star-off.png') %>',
              starOn: '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: <%= @book.star %>,
            });
          </script>
          <%= @book.star %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book",class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to 'Show', @book %> |
      <%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>